<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<%= render "shared/header" %>

  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        Create new account
      </h1>
    </div>

    <%= render 'shared/error.messages', model: f.object %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">nickname</label>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"nickname", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">email</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"email", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">password</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"password" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "create" ,class:"register-red-btn" %>
    </div>
  </div>  
<% end %>
<%= render "shared/footer" %>
