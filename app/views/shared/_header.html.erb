<header class='top-page-header'>
  <div class='nav'>
    <ul class='lists-left'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
      <li><%= link_to 'Stage', "#", class: "brand-list" %></li>
      <% end %>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to 'log out', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <li><%= link_to 'post', new_post_path, class: "post" %></li>
      <% else %>
      <li><%= link_to 'log in', new_user_session_path, class: "login" %></li>
      <li class='or'>or</li>
      <li><%= link_to 'create account', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>